<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/content_flicker_image_gallery"
>

    <Button
        android:id="@+id/btn_load_image"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:text="@string/load_images"
        tools:layout_constraintTop_creator="1" android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
